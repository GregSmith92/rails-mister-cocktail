<h1>Cocktail List</h1>

<div class="cocktails-index">
  <% @cocktails.each do |cocktail| %>
     <%= link_to cocktail_path(cocktail) do %>
      <div class="cocktail-card">
        <p> <%= cocktail.name %> <p>
          <%= cl_image_tag cocktail.photo, height: 150, width: 200, crop: :fill %>
      </div>
    <% end %>
  <% end %>
</div>

<div>
  <%= link_to "Add a cocktail", new_cocktail_path, class:"btn btn-primary" %>
</div>
