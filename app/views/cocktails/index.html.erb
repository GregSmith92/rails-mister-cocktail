<div class="head" style="background-image: url('<%= image_path 'city-scape.jpg' %>');">
  <h1>Saucy Cocktails</h1>
</div>

<div class="cocktails-index">
  <% @cocktails.each do |cocktail| %>
     <%= link_to cocktail_path(cocktail) do %>
      <div class="cocktail-card">
        <%= cl_image_tag cocktail.photo, height: 200, width: 300, crop: :fill %>
        <p> <%= cocktail.name.capitalize %> <p>
      </div>
    <% end %>
  <% end %>
</div>

<div>
  <%= link_to "Add a cocktail", new_cocktail_path, class:"btn btn-primary" %>
</div>
